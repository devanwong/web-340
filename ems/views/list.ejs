<!DOCTYPE html>
<html lang="en">
  <%- include ('header') %>

<body>
  <%- include ('navbar') %>
  <div role="main" class="container" style="width:50%">
    <br/><br/>
    <% if (employees.length) { %>
      <h2><%= title %></h2><br />
      <a href="/new">Add New</a>
      <table class="table table‐hover">
          <thead class="thead‐dark">
          <tr>
              <th>Name</th>
          </tr>
          </thead>
          <tbody>
          <% employees.forEach(function(entry) { %>
          <tr>
              <td><%= entry.name %></td>
          </tr>
          </tbody>
          <% }) %>
      </table>
      <% } else { %>
      No entries! <a href="/new">Add one!</a>
      <% } %>

  </div>
  <%- include ('scripts') %>
</body>
</html>

